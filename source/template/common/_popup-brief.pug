.popup-brief
	.popup-brief__header
		h2.popup-brief__title Оставьте заявку
		p.popup-brief__intro Или позвоните <a class="popup-brief__intro-link" href="tel:+74956606202">+7 (495) 660-62-02</a> чтобы не утруждать себя
	.popup-brief__main
		form.brief.form(data-brief)
			.brief__row
				.brief__row-title Выберите услуги
				ul.brief__tags
					li.brief__tags-item
						input.visually-hidden(id="design", type="checkbox", name="services", value="design", checked)
						label.brief__tags-item-label(for="design")
							span Дизайн сайта
					li.brief__tags-item
						input.visually-hidden(id="develop", type="checkbox", name="services", value="develop")
						label.brief__tags-item-label(for="develop") Разработка
					li.brief__tags-item
						input.visually-hidden(id="support", type="checkbox", name="services", value="support")
						label.brief__tags-item-label(for="support") Поддержка
					li.brief__tags-item
						input.visually-hidden(id="analytic", type="checkbox", name="services", value="analytic")
						label.brief__tags-item-label(for="analytic") Аналитика
					li.brief__tags-item
						input.visually-hidden(id="testing", type="checkbox", name="services", value="testing")
						label.brief__tags-item-label(for="testing") Тестирование
					li.brief__tags-item
						input.visually-hidden(id="other", type="checkbox", name="services", value="other")
						label.brief__tags-item-label(for="other") Другое


			.brief__row
				.brief__row-title Бюджет
				.rangeslider.brief__rangeslider
					input(data-range="budget", name="budget", value="до 500 т.р.")
				ul.brief__radiotags(data-radio="budget")
					- var budgetList = ['до 500 т.р.', '1-3 млн.р', '3-5 млн.р', '5-7 млн.р', '7-10 млн.р', '10-15 млн.р', 'от 15 млн.р']
					each val, idx in budgetList
						li.brief__tags-item
							input.visually-hidden(id='budget'+idx, type="radio", name="budget", value=val, checked=idx===0)
							label.brief__tags-item-label(for='budget'+idx)
								span= val

			.brief__row
				.brief__row-title Ожидаемые сроки
				.rangeslider.brief__rangeslider
					input(data-range="deadlines", name="deadlines", value="")
				ul.brief__radiotags(data-radio="deadlines")
					- var deadlinesList = ['менее 1 мес.', '1-3 мес', '3-5 мес', '5-7 мес', '7-10 мес', '10-12 мес', 'более 1.5 лет', ]
					each val, idx in deadlinesList
						li.brief__tags-item
							input.visually-hidden(id='deadlines' + idx, type="radio", name="deadlines", value=val, checked=idx === 0)
							label.brief__tags-item-label(for='deadlines' + idx)
								span= val


			.brief__row
				.form-group.brief__description
					+textarea('description', 'Опишите проект', true)
				+inputFile('description-file', 'Прикрепить файл')

			.brief__row
				.brief__row-title Контактные данные
				.brief__input-group-wrap
					.brief__input-group-item
						+input('name', 'Имя', true)
					.brief__input-group-item
						+input('company', 'Компания', true)
				.brief__input-group-wrap
					.brief__input-group-item
						+input('phone', 'Телефон', true)
					.brief__input-group-item
						+input('email', 'Электронная почта', true)


			.brief__footer
				button.button.button--white.brief__button(type="submit") Отправить
				p.brief__footer-disclaimer Нажимая кнопку «Отправить», вы даете согласие на <a href="#">обработку ваших персональных данных.</a>


